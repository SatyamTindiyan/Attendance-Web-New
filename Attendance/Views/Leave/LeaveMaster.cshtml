@{
    ViewBag.Title = "LeaveMaster";
}

<link href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" />
<link href="https://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" rel="stylesheet" />

<div class="container-fluid main-wraper">
    <div class="shadow-box infraFormWraper">
        <div class="row">

            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Leave Group Type</span>
                    </div>
                    <select class="form-control w-75" id="leavegroup">
                        <option value="0">Select</option>
                        <option value="Leave Group Main">Leave Group Main</option>
                        <option value="Leave Group External">Leave Group External</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Leave Name</span>
                    </div>
                    <input type="text" class="form-control w-75 " placeholder="Leave Name" name="" id="txtleaveName">
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Leave Code</span>
                    </div>
                    <input type="text" class="form-control w-75 " placeholder="Leave Code" name="" id="txtleaveCode">
                    @*<select class="form-control w-75" id="ddlleaveType">
                    <option selected>-Select-</option>
                    <option id="1">CL</option>
                    <option id="2">PL</option>
                    <option id="3">ML</option>
                    <option id="4">SHL</option>
                    </select>*@
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Leave Credit Type<sup class="text-danger">*</sup></span>
                    </div>
                    <select class="form-control w-75" id="ddlleavecreditType">
                        <option selected>Leave Credit Type</option>
                        <option id="1">MONTHLY</option>
                        <option id="2">QUATERLY</option>
                        <option id="3">HALFYEARLY</option>
                        <option id="4">YEARLY</option>
                    </select>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Leave Credit<sup class="text-danger">*</sup></span>
                    </div>
                    <input type="text" class="form-control w-75" placeholder="Leave Credit" name="" id="txtleaveCredite" onkeypress="return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))">
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">From Date<sup class="text-danger">*</sup></span>
                    </div>
                    <input type="text" class="form-control w-75" placeholder="from date" autocomplete="off" name="" id="txtFromDate" style="line-height:15px;">
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">To Date <sup class="text-danger">*</sup></span>
                    </div>
                    <input type="text" class="form-control w-75 " placeholder=" To date" name="" autocomplete="off" id="txtToDate">
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Quantity<sup class="text-danger">*</sup></span>
                    </div>
                    <input type="text" class="form-control w-75 " placeholder="Quantity" name="" id="txtQuantity" onkeypress="return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))">
                </div>
            </div>
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Remarks</span>
                    </div>
                    <textarea class="form-control w-75" rows="1" placeholder="Remarks" id="txtRemarks"></textarea>
                </div>
            </div>
            <div class="col-12 mb-3 text-right">
                <span id="validatemsgS" class="text-success"></span>
                <span id="validatemsgE" class="text-warning"></span>
                <input type="hidden" id="hiddenRecordId" name="" value="">
                <a href="#" class="btn btn-sm btn-vilot mr-1" id="btnSaveleaveMaster">Save</a>
                <a href="#" class="btn btn-sm btn-vilot" id="btnCancelleaveMaster">Cancel</a>
            </div>
        </div>
    </div>
    <div class="shadow-box InfraTableWraper">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="table-responsive">
                    <table class="table table-bordered mb-0  table-sm small table-striped infraTable" id="tblLeaveMaster">
                        <thead class="bg-secondary text-white">
                            <tr>
                                <th>#</th>
                                @*<th>Leave Group Name</th>*@
                                <th>Leave Name</th>
                                <th>Leave Code</th>
                                <th>Leave Credit Type</th>
                                <th>Leave Credit</th>
                                <th>Count</th>
                                @*<th>From Date</th>
                                <th>To Date</th>*@
                                <th>Remarks</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="tblLeaveMasterBody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section layoutjs
    {
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="~/js/leave/leavemaster.js"></script>

}

