@model Attendance.Domain.Models.Leave.ManageLeaveRequest


<link href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" />
@*<link href="https://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" rel="stylesheet" />*@


<div class="container-fluid main-wraper">

    <div class="shadow-box infraFormWraper">
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Country</span>
                    </div>
                    @*<select class="form-control w-75">
                    <option selected>Select</option>
                    <option>1</option>
                    <option>2</option>
                    </select>*@
                    @Html.DropDownListFor(m => m.CountryId, new SelectList(ViewBag.Countrylist, "CountryID", "Country"), "Select Country", new { @Class = "form-control w-75" })
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Company</span>
                    </div>
                    <select id="CompanyID" Class="form-control w-75" ,disabled="true"></select>
                    @*<select class="form-control w-75">
                    <option selected>Select</option>
                    <option>1</option>
                    <option>2</option>
                    </select>*@
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Department</span>
                    </div>
                    <select id="DepartmentID" Class="form-control w-75" ,disabled="true"></select>
                    @*<select class="form-control w-75">
                    <option selected>Select</option>
                    <option>1</option>
                    <option>2</option>
                    </select>*@
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Employee</span>
                    </div>
                    <select id="EmployeeID" Class="form-control w-75" ,disabled="true"></select>
                    @*<select class="form-control w-75">
                    <option selected>Select</option>
                    <option>1</option>
                    <option>2</option>
                    </select>*@
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">From Date</span>
                    </div>
                    <input type="text" id="txtFromDate" class="form-control w-75" autocomplete="off" placeholder="DD/MM/YYYY" name="">
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">To Date</span>
                    </div>
                    <input type="text" id="txtTodate" class="form-control w-75" autocomplete="off" placeholder="DD/MM/YYYY" name="">
                </div>
            </div>
            <div class="col-12 mb-3 text-right">
                <a href="#" class="btn btn-sm btn-vilot" id="btnReportSearch">Search</a>
                <input type="hidden" id="hiddenemp" @ViewBag.empid />
            </div>
        </div>
    </div>
    <div class="shadow-box InfraTableWraper">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="table-responsive">
                    <table class="table table-bordered mb-0  table-sm small table-striped infraTable" id="tblLeaveReport">
                        <thead class="bg-secondary text-white">
                            <tr>
                                <th>#</th>
                                <th>Emp Id</th>
                                <th>Emp Name</th>
                                <th>From Date</th>
                                <th>To Date</th>
                                <th>No. of Leaves</th>
                                <th>Leave Type</th>
                                <th>Remark</th>

                            </tr>
                        </thead>
                        <tbody id="tblleaveReportBody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section layoutjs
    {
    @*<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js" type="text/javascript"></script>*@
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="~/js/leave/leavereport.js"></script>
}
