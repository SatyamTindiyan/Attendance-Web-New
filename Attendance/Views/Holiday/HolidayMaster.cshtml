@{
    ViewData["Title"] = "HolidayMaster";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/datatable/jquery.datatables.min.css" rel="stylesheet" />
<link href="~/css/datatable/jquery.datatables.css" rel="stylesheet" />
<link href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css" rel="stylesheet" />

<div class="container-fluid main-wraper">
    <div class="shadow-box infraFormWraper">
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Country</span>
                    </div>
                    <select class="form-control w-75" id="ddlcountry">
                    </select>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">State</span>
                    </div>
                    <select class="form-control w-75" id="ddlstateholiday">
                    </select>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Holiday Name</span>
                    </div>
                    <select class="form-control w-75" id="holidaydescription">
                        @*<input type="text" id="Holydaydesc" class="form-control w-75" placeholder="Holiday Description" name="">*@
                    </select>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Holiday Description</span>
                    </div>
                    @*<input type="text" id="Holydaydesc" class="form-control w-75" placeholder="Holiday Description" name="" />*@
                    <select class="form-control w-75" id="Holydaydesc">
                    </select>
                </div>
            </div>


            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Date</span>
                    </div>
                    <input type="text" id="holidaydate" class="form-control w-75" placeholder="DD/MM/YYYY" name="" autocomplete="off">
                    @*<div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                    </div>*@
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">WeekDay</span>
                    </div>
                    <select class="form-control w-75" id="weekday">
                        <option selected>-Select-</option>
                        <option>Monday</option>
                        <option>Tuesday</option>
                        <option>Wednesday</option>
                        <option>Thursday</option>
                        <option>Friday</option>
                        <option>Saturday</option>
                        <option>Sunday</option>
                    </select>
                </div>
            </div>
            @*<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
            <div class="input-group form-group input-group-sm">
            <div class="input-group-prepend w-25">
            <span class="input-group-text w-100">Calendar Type</span>
            </div>
            <select class="form-control w-75">
            <option selected>-Select-</option>
            <option>1</option>
            <option>2</option>
            </select>
            </div>
            </div>*@
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 cl-xs-12">
                <div class="input-group form-group input-group-sm">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Remarks</span>
                    </div>
                    <textarea class="form-control w-75" rows="1" placeholder="Remarks" id="remarks"></textarea>
                </div>
            </div>

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 cl-xs-12">
                <form method="post" enctype="multipart/form-data" asp-controller="SaveSiteUploadFromExcel" asp-action="Index">
                    <div class="form-group">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 cl-xs-12">
                            <div class="input-group form-group input-group-sm">
                                <div class="input-group-prepend w-25">
                                    <span class="input-group-text w-100">Upload File</span>
                                </div>
                                <input class="form-control w-75" name="ExcelFile" id="Excelfile" multiple="multiple" type="file" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-5">
                            <input class="btn btn-sm btn-vilot mr-1" type="submit" value="Upload File" id="btnSubmitholidayuplod" />
                            <a onclick="download_csv_file()" class="btn btn-sm btn-vilot">Download CSV</a>
                        </div>
                    </div>
                </form>
            </div>
            @*<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 cl-xs-12">
            <div class="input-group form-group input-group-sm">
            <div class="input-group-prepend w-25">
            <span class="input-group-text w-100">Download the CSV file</span>
            </div>
            <a onclick="download_csv_file()" class="btn btn-sm btn-vilot mr-1" href="#">Download CSV</a>
            </div>
            </div>*@

        </div>
        <div class="col-12 mb-3 text-right">
            @*<span id="validatemsgS" class="text-success"></span>
            <span id="validatemsgE" class="text-warning"></span>*@
            <input type="hidden" id="hiddenRecordId" name="" value="">
            <a class="btn btn-sm btn-vilot mr-1" id="btnSaveholiday">Save</a>
           @* <a class="btn btn-sm btn-vilot">Cancel</a>*@
        </div>
    </div>
</div>
<div class="shadow-box InfraTableWraper">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="table-responsive">
                <table class="table table-bordered mb-0 small table-sm table-striped infraTable" id="bindholidaytbl">
                    <thead @*class="bg-secondary text-white"*@>
                        <tr>
                            <th>#</th>
                            @*<th>ID</th>*@
                            @*<th>Company</th>*@
                            <th>Country</th>
                            <th>State</th>
                            <th>Holiday Name</th>
                            <th>Holiday Description</th>
                            <th>Date</th>
                            <th>WeekDay</th>
                            @*<th>Calendar Type</th>*@
                            <th>Remarks</th>
                            @*    <th>Action</th>*@
                        </tr>
                    </thead>
                    <tbody id="tblHolidayMasterBody">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal confirmation-popup C-popup-success fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <i class="fa fa-check confirmation-popup-icon" aria-hidden="true"></i>
                    <button type="button" class="close" id="btnclose" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h5 id="txt" class="confirmation-popup-msg">Success</h5>
                </div>
                <div class="modal-footer text-center justify-content-center">
                    <button type="button" id="succ" class="btn confirmation-popup-btn abc" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal confirmation-popup C-popup-danger fade" id="dangerModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <i class="fa fa-close confirmation-popup-icon" aria-hidden="true"></i>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h5 id="txterror" class="confirmation-popup-msg">Error</h5>

                </div>
                <div class="modal-footer text-center justify-content-center">
                    <button type="button" id="error" class="btn confirmation-popup-btn" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal confirmation-popup C-popup-warning fade" id="warningModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <i class="fa fa-exclamation-triangle confirmation-popup-icon" aria-hidden="true"></i>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h5 id="txtwar" class="confirmation-popup-msg">Warning</h5>
                </div>
                <div class="modal-footer text-center justify-content-center">
                    <button type="button" id="divMessage" class="btn confirmation-popup-btn" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>



